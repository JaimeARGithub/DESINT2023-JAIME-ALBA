<Window x:Class="OtroEjemploConBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OtroEjemploConBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl TabStripPlacement="Left">

            <TabItem Header="VEGGIES">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="9*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Frame x:Name="FrameVeggies" Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="1"/>

                    <Button x:Name="btnRep" Content="REPORT" Width="60" Height="20" Grid.Column="1" Grid.Row="1" Click="btnRep_Click"/>
                </Grid>


            </TabItem>


            <TabItem Header="OTHER TAB">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
